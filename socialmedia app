#script.js
function likePost(button) {
  if (button.textContent.includes("Like")) {
    button.textContent = "ğŸ’– Liked";
    button.style.color = "red";
  } else {
    button.textContent = "â¤ï¸ Like";
    button.style.color = "";
  }
}

function toggleDarkMode() {
  document.body.classList.toggle("dark-mode");
}
